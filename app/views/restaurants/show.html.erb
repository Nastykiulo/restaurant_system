<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @restaurant.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @restaurant.user %>
</p>

<% if @restaurant.menu.attached? %>
  <h2>Меню ресторана</h2>
  <% if @restaurant.menu.image? %>
    <%= link_to image_tag(@restaurant.menu.variant(resize: "4x4")), rails_blob_path(@restaurant.menu, disposition: 'inline') %>
  <% else %>
    <%= link_to "Скачать меню", rails_blob_path(@restaurant.menu, disposition: 'inline') %>
  <% end %>
<% end %>

<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>
